import { Component, inject } from '@angular/core';
import { Router } from '@angular/router';

@Component({
  selector: '{{dashCase name}}-list',
  template: `
  <page-header header="{{titleCase name}}" [showCancel]="false">
      <mx-button  (handleClick)="create()">
        <span class="flex items-center">
          <p>Add {{titleCase name}}</p>
        </span>
      </mx-button>
    </page-header>
  <mx-grid-shell gridTitle="{{titleCase name}}s" apiURL="/{{dashCase name}}/list">
    <!-- columns -->
      {{#each schemaValue.properties}}
      <mx-column field="{{@key}}"  />
      {{/each}}
    <!-- columns -->

    <!-- filters -->
    {{#each schemaValue.properties}}
      <mx-grid-filter label="{{properCase @key}}" field="{{@key}}"  />
    {{/each}}
    <!-- filters -->

    <!-- actions -->
      <mx-action icon="edit" (handleClick)="edit($event)" text="Edit" />
    <!-- actions -->
  </mx-grid-shell>`,
})
export class {{properCase name}}ListComponent {
  private router = inject(Router);

  create() {
    this.router.navigate(['/{{dashCase name}}/create']);
  }

  edit(e: any) {
    this.router.navigate(['/{{dashCase name}}/update/' + e.cellData.id]);
  }
}
