<mx-form [form]='{{name}}Form' [zodSchema]='{{zodSchema}}'>
  <div class='grid md:grid-cols-3 sm:grid-cols-1 gap-4'>
    {{#each schemaValue.properties}}
      {{#unless this.skipField}}
        {{#eq this.formType 'string'}}
          <mx-input
            label='{{properCase @key}}'
            [control]='formControls.{{@key}}'
          />
        {{/eq}}
        {{#eq this.formType 'number'}}
          <mx-input
            label='{{properCase @key}}'
            [control]='formControls.{{@key}}'
            type='number'
          />
        {{/eq}}
        {{#eq this.formType 'date'}}
          <mx-input
            label='{{properCase @key}}'
            [control]='formControls.{{@key}}'
            type='date'
          />
        {{/eq}}
        {{#eq this.formType 'time'}}
          <mx-input
            label='{{properCase @key}}'
            [control]='formControls.{{@key}}'
            type='time'
          />
        {{/eq}}
              {{#eq this.formType 'checkbox'}}
          <mx-checkbox
            label='{{properCase @key}}'
            [control]='formControls.{{@key}}'
          />
        {{/eq}}
      {{/unless}}
    {{/each}}
  </div>
  {{#each schemaValue.properties}}
    {{#eq this.formType 'textarea'}}
      <mx-textarea
        label='{{properCase @key}}'
        [control]='formControls.{{@key}}
      />
    {{/eq}}
{{/each}}

  {{#each schemaValue.properties}}
    {{#eq this.formType 'file'}}
      <mx-file-upload
        label='{{properCase @key}}'
        (handleFileChange)=" handle{{properCase @key}}Change($event)"
      />
    {{/eq}}
    {{#eq this.formType 'file-multi'}}
      <mx-file-upload
        label='{{properCase @key}}'
        [multiple]="true"
        (handleFileChange)=" handle{{properCase @key}}Change($event)"
      />
    {{/eq}}
  {{/each}}
</mx-form>
